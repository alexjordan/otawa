		<stage id="MEM">
			<name>MEM</name>
			<width>2</width>
			<type>LAZY</type>
		</stage>

		<stage id="CM">
			<name>CM</name>
			<width>2</width>
			<type>COMMIT</type>
		</stage>
	</stages>

